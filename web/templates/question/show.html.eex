<h2>Show question</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @question.title %>
  </li>

  <li>
    <strong>Content:</strong>
    <%= @question.content %>
  </li>

  <li>
    <strong>Points:</strong>
    <%= @question.points %>
  </li>

  <li>
    <strong>User:</strong>
    <%= @question.user.name %>
  </li>

</ul>

<%= if current_user(@conn) == @question.user do %>
<%= link "Edit", to: question_path(@conn, :edit, @question) %>
<%= end %>
<%= link "Back", to: question_path(@conn, :index) %>
